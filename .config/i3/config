set $mod Mod4
#set $font xft:Liberation Mono
set $font xft:s0sevka t

workspace_layout default

# disable tabs at the top. this is cancer
font $font 10
new_window pixel 2
new_float pixel 2

default_border pixel 2
default_floating_border pixel 3
#hide_edge_borders none

floating_modifier $mod

exec_always picom
exec dunstctl set-paused true

exec --no-startup-id sh -C ""
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id nm-applet
exec --no-startup-id alttab
exec --no-startup-id xfce4-power-manager
exec --no-startup-id xfce4-clipman
exec --no-startup-id xautolock -time 10 -locker blurlock

exec_always --no-startup-id ff-theme-util
exec_always --no-startup-id fix_xcursor
exec_always alttab -w 1 -fg "#32a852" -bg "#1e211f" -frame "#288f44" -font "$font" -t 128x128 -i 128x64

#exec --no-startup-id feh --bg-fill ~/Pictures/background.jpg

bindsym $mod+e exec thunar

bindsym $mod+Print --release exec --no-startup-id i3-scrot -w

bindsym $mod+t exec kitty

bindsym $mod+q kill
bindsym --release --border button2 kill

bindsym $mod+Tab exec --no-startup-id rofi -show drun -show-icons

focus_follows_mouse no

bindsym $mod+j focus left
