#!/bin/bash

[[ $- != *i* ]] && return
[[ $TERM != *xterm* ]] && return

alias ls='ls --color=auto'
PS1='[\u@\h \W]\$ '
. "$HOME/.profile"

# If this is not an ssh connection and NO_FISH isn't defined, replace!
if [ -z "$NO_FISH" ] && [ -z "$SSH_CONNECTION" ]; then
  echo "Replacing bash..."
  exec fish
fi
