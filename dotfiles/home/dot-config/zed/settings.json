{
  "ssh_connections": [
    {
      "host": "adbm-2843-host",
      "username": "login",
      "args": [
        "-o",
        "ProxyCommand=socat - PROXY:localhost:%h:%p,proxyport=2090"
      ],
      "projects": [
        {
          "paths": ["/home/login"]
        }
      ]
    }
  ],

  "base_keymap": "VSCode",

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "vim_mode": true,
  "vim": {
    "cursor_shape": {
      "insert": "bar",
      "replace": "hollow",
      "visual": "underline"
    },
    "use_smartcase_find": true
  },

  "minimap": {
    "show": "never"
  },
  "cursor_shape": "bar",

  "icon_theme": {
    "mode": "light",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },

  "ui_font_family": "Inter",
  "ui_font_size": 22.0,

  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 20.0,

  "theme": {
    "mode": "light",
    "light": "One Light",
    "dark": "Gruvbox Dark"
  },
  
  "agent_ui_font_size": 18.0,

  "session": {
    "trust_all_worktrees": true
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "preview_tabs": {
    "enabled": false,
  },
  "tab_bar": {
    "show": false
  },
  "use_smartcase_search": true,
  "vertical_scroll_margin": 5.0,
  "max_tabs": 16,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "tab_size": 2,
  "colorize_brackets": true,
  "lsp_document_colors": "background",
  "buffer_font_weight": 420.0,
  "show_completions_on_input": false,
  "show_whitespaces": "all",
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": false,
  "indent_guides": {
    "enabled": false
  },
  "soft_wrap": "editor_width",
  "scroll_beyond_last_line": "one_page",
  "agent": {
    "default_model": {
      "provider": "openrouter",
      "model": "openai/gpt-5-codex"
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "terminal": {
    "font_family": "JetBrains Mono",
    "env": {
      "NO_FISH": "1"
    }
  },
  "auto_install_extensions": {
    "wakatime": true
  }
}
